--= INICIALIZAÇÃO =--
local mon = peripheral.find("monitor")
if not mon then
    print("Monitor não encontrado!")
    return
end

mon.setTextScale(0.5)
local w, h = mon.getSize()
local centerX, centerY = math.floor(w / 2), math.floor(h / 2)

--= CORES PSICODÉLICAS =--
local COLORS = {
    colors.red, colors.orange, colors.yellow,
    colors.green, colors.cyan, colors.blue,
    colors.purple, colors.magenta, colors.pink
}

--= CONFIGURAÇÕES AJUSTADAS =--
local EYE_WIDTH = 20       -- Reduzido de 30 para 20
local EYE_HEIGHT = 12      -- Reduzido de 18 para 12
local IRIS_RADIUS = 6      -- Reduzido de 8 para 6
local PUPIL_RADIUS = 2     -- Reduzido de 3 para 2
local MOVE_RADIUS_X = 8    -- Reduzido de 10 para 8
local MOVE_RADIUS_Y = 4    -- Reduzido de 6 para 4
local COLOR_CHANGE_INTERVAL = 2
local MOVE_CHANGE_INTERVAL = 0.4

--= ESTADO =--
local currentColor = colors.blue
local lastColorChange = os.clock()
local targetX, targetY = 0, 0
local eyeX, eyeY = 0, 0
local lastMoveChange = os.clock()

--= FUNÇÕES AUXILIARES =--
local function drawPixel(x, y, color)
    if x >= 1 and x <= w and y >= 1 and y <= h then
        mon.setCursorPos(x, y)
        mon.setBackgroundColor(color)
        mon.write(" ")
    end
end

local function drawEllipse(cx, cy, rx, ry, color)
    for y = -ry, ry do
        local lineWidth = math.floor(rx * math.sqrt(1 - (y*y)/(ry*ry)))
        for x = -lineWidth, lineWidth do
            drawPixel(centerX + cx + x, centerY + cy + y, color)
        end
    end
end

--= LOOP PRINCIPAL =--
while true do
    mon.setBackgroundColor(colors.black)
    mon.clear()

    -- Troca de cor
    if os.clock() - lastColorChange > COLOR_CHANGE_INTERVAL then
        local newColor
        repeat
            newColor = COLORS[math.random(#COLORS)]
        until newColor ~= currentColor
        currentColor = newColor
        lastColorChange = os.clock()
    end

    -- Movimento do olho
    if os.clock() - lastMoveChange > MOVE_CHANGE_INTERVAL then
        targetX = math.random(-MOVE_RADIUS_X, MOVE_RADIUS_X)
        targetY = math.random(-MOVE_RADIUS_Y, MOVE_RADIUS_Y)
        lastMoveChange = os.clock()
    end

    -- Suaviza o movimento (interpolação linear)
    eyeX = eyeX + (targetX - eyeX) * 0.2
    eyeY = eyeY + (targetY - eyeY) * 0.2

    -- Desenha o olho (com proporções ajustadas)
    drawEllipse(0, 0, EYE_WIDTH, EYE_HEIGHT, colors.white)      -- Esclera
    drawEllipse(eyeX, eyeY, IRIS_RADIUS, IRIS_RADIUS, currentColor)  -- Íris
    drawEllipse(eyeX, eyeY, PUPIL_RADIUS, PUPIL_RADIUS, colors.black) -- Pupila

    -- Reflexos (ajustados para o novo tamanho)
    drawPixel(centerX + eyeX - 2, centerY + eyeY - 2, colors.white)
    drawPixel(centerX + eyeX - 1, centerY + eyeY - 2, colors.white)

    sleep(0.05)
end
