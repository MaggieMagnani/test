-- tela_raios.lua

local mon
for _, nome in ipairs(peripheral.getNames()) do
  if peripheral.getType(nome) == "monitor" then
    mon = peripheral.wrap(nome)
    break
  end
end

if not mon then
  print("Nenhum monitor encontrado!")
  return
end

mon.setTextScale(0.5)
local w, h = mon.getSize()
local cores = {
  colors.red, colors.yellow, colors.green,
  colors.blue, colors.magenta, colors.orange
}

while true do
  for y = 1, h do
    mon.setCursorPos(1, y)
    local cor = cores[(y + os.clock() * 10) % #cores + 1]
    mon.setBackgroundColor(cor)
    mon.write(string.rep(" ", w))
  end
  sleep(0.1)
end

    sleep(0.08)
  end

  sleep(0.1)
end
