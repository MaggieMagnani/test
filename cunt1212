local monitor = peripheral.find("monitor")
monitor.setTextScale(1)
local largura, altura = monitor.getSize()

local cores = {
  colors.red,
  colors.orange,
  colors.yellow,
  colors.lime,
  colors.green,
  colors.cyan,
  colors.blue,
  colors.purple,
  colors.pink,
  colors.white
}

while true do
  for y = 1, altura do
    for x = 1, largura do
      monitor.setCursorPos(x, y)
      local cor = cores[math.random(1, #cores)]
      monitor.setBackgroundColor(cor)
      monitor.write(" ")
    end
  end
  sleep(math.random(1, 3) / 20) -- r√°pido, entre 0.05 e 0.15s
end
