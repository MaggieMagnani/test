-- tela_onda.lua

local mon
for _, nome in ipairs(peripheral.getNames()) do
  if peripheral.getType(nome) == "monitor" then
    mon = peripheral.wrap(nome)
    break
  end
end

if not mon then
  print("Nenhum monitor encontrado!")
  return
end

mon.setTextScale(0.5)
local w, h = mon.getSize()
local cores = {
  colors.red, colors.orange, colors.yellow,
  colors.green, colors.blue, colors.magenta,
  colors.cyan, colors.white
}

local t = 0

while true do
  for y = 1, h do
    mon.setCursorPos(1, y)
    local corIndex = math.floor((math.sin((y + t) / 2) + 1) * (#cores / 2)) + 1
    mon.setBackgroundColor(cores[corIndex])
    mon.write(string.rep(" ", w))
  end
  t = t + 1
  sleep(0.08)
end
