local monitor = peripheral.find("monitor")
monitor.setTextScale(1)
local largura, altura = monitor.getSize()

local cores = {
  colors.red,
  colors.orange,
  colors.yellow,
  colors.lime,
  colors.green,
  colors.cyan,
  colors.blue,
  colors.purple,
  colors.white
}

while true do
  monitor.setBackgroundColor(colors.black)
  monitor.clear()
  
  for x = 1, largura do
    local h = math.random(1, altura)
    local cor = cores[math.random(1, #cores)]
    monitor.setBackgroundColor(cor)
    for y = altura, altura - h + 1, -1 do
      monitor.setCursorPos(x, y)
      monitor.write(" ")
    end
  end

  sleep(0.15)
end

